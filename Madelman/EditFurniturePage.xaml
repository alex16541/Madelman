<Page x:Class="Madelman.EditFurniturePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Madelman"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="400"
      Title="EditFurniturePage" Background="White" Loaded="Page_Loaded">

    <Grid>
        <TextBox x:Name="tbTitle" HorizontalAlignment="Left" Height="100" Margin="157,33,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="209" FontFamily="Comic Sans MS"/>
        <Label Content="Название (описание):" HorizontalAlignment="Left" Margin="10,33,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Right" FontFamily="Comic Sans MS"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="34,0,0,25" VerticalAlignment="Bottom" Width="89" Click="btnCancel_Click" FontFamily="Comic Sans MS" Height="43" Background="Firebrick" BorderBrush="Black" Foreground="Black"/>
        <Button x:Name="btnSave" Content="Save" HorizontalAlignment="Left" Margin="275,0,0,25" VerticalAlignment="Bottom" Width="91" Click="btnSave_Click" FontFamily="Comic Sans MS" Height="43" Background="#FFE34234" BorderBrush="Black" Foreground="White" />
    </Grid>
</Page>
