<Page x:Class="Madelman.EditMaterialsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Madelman"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="400"
      Title="EditMaterialsPage" Background="White" Loaded="Page_Loaded">

    <Grid>
        <TextBox x:Name="tbTitle" HorizontalAlignment="Left" Height="100" Margin="157,33,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="209"/>
        <Label Content="Название (описание):" HorizontalAlignment="Left" Margin="10,33,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="34,0,0,25" VerticalAlignment="Bottom" Width="75" Click="btnCancel_Click"/>
        <Button x:Name="btnSave" Content="Save" HorizontalAlignment="Left" Margin="291,0,0,25" VerticalAlignment="Bottom" Width="75"/>
    </Grid>
</Page>
